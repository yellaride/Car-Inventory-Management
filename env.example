# Database
DATABASE_URL="postgresql://user:password@localhost:5432/car_inventory?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin login (bcrypt hash of password)
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD_HASH=<run: node -e "require('bcrypt').hash('YourPassword', 10).then(h=>console.log(h))">

# CORS
CORS_ORIGIN=http://localhost:3000

# VIN Decoder API (NHTSA is free)
VIN_DECODER_API_URL=https://vpic.nhtsa.dot.gov/api

# File Upload
MAX_FILE_SIZE=2147483648
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/webm

# Storage (For production - Cloudflare R2 or AWS S3)
STORAGE_PROVIDER=local
STORAGE_BUCKET=car-media
STORAGE_REGION=auto
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_ENDPOINT=
STORAGE_PUBLIC_URL=http://localhost:3001/uploads
